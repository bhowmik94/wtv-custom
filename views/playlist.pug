extends layout

block content
  .playlist-player
      .container.custom-width.video-player-container
        div.loader-container
          div.loader
        div.video-player
            iframe(src=videoEmbeddedUrl, style='border: 0;', webkitallowfullscreen, allowfullscreen, width='100%', height='100%', frameborder='0')

  .playlist-video-info
      .container.custom-width
        div.video-info
          div.row
              div.col-md-9.col-xs-push-12
                div.item
                    div.meta
                      span.meta-item.date
                        i.calendar-icon
                        =videoTime
                      span.meta-item.duration
                        i.clock-icon
                        =videoDuration
                    div.title
                        =videoTitle
                    div.desc
                        =videoDescription
