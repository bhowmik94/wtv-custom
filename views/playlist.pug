          section.channels
            div(id="current-playlist-carousel")

block customscript
  script
    | (window.constants || (window.constants = {}));
    | window.constants.BASE_URL='
    =siteBaseUrl
    | ';
    | window.constants.CURRENT_SCREEN = 'playlist';
    | window.constants.CURRENT_CHANNEL_ID='
    =channelId
    | ';
    | window.constants.CURRENT_PLAYLIST_ID='
    =playlistId
    | ';
    | window.constants.CURRENT_VIDEO_ID='
    =videoId
    | ';
    | window.constants.LANGUAGE='
